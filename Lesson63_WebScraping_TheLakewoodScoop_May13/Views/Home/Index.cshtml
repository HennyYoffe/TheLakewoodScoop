@using ClassLibrary1
@model List<NewsItem>

<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Date</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img style="width: 150px; max-height: 200px;" src="@item.ImageUrl" /></td>
            <td>
                <a href="https://amazon.com/@item.Url" target="_blank">@item.Title</a>
            </td>
            <td>
                @if (item.Date != null)
                {
                    <h4>@item.Date</h4>
                }

            </td>
        </tr>
    }
</table>